apiVersion: v1
kind: Secret
metadata:
  name: transcode-secrets
  namespace: transcode
  labels:
    app.kubernetes.io/name: transcode-pipeline
type: Opaque
stringData:
  # PostgreSQL
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "CHANGE_ME"
  POSTGRES_DB: "transcode"
  DATABASE_URL: "postgres://postgres:CHANGE_ME@postgres:5432/transcode?sslmode=disable"

  # S3/MinIO
  S3_ACCESS_KEY: "CHANGE_ME"
  S3_SECRET_KEY: "CHANGE_ME"
